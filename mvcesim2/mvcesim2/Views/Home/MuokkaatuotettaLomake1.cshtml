
@{
    ViewBag.Title = "MuokkaatuotettaLomake1";
}

<h2>Tuotteen muokkaus</h2>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Tuotenumero</th>
                <th>Tuotenimi</th>
                <th>Hinta</th>
                <th>Varasto</th>
            </tr>
        </thead>
        <tbody>
            @{while (@Model.tulos.Read())
                {

                    <tr>
                        <td>@Model.tulos.GetString(@Model.tulos.GetOrdinal("tuotenumero"))</td>
                        <td>@Model.tulos.GetString(@Model.tulos.GetOrdinal("tuotenimi"))</td>
                        <td>@Model.tulos.GetString(@Model.tulos.GetOrdinal("hinta"))</td>
                        <td>@Model.tulos.GetString(@Model.tulos.GetOrdinal("varasto"))</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

<div class="container">

    <form class="form-horizontal" method="post" action="/Home/MuokkaaTuotettaLomake2">

        <div class="form-group">
            <label class="control-label col-sm-2" for="nimi">Tuotenimi:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="tuotenimi" name="tuotenimi" required placeholder="anna nimi">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="nimi">Hinta:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="hinta" name="hinta" required placeholder="anna hinta">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="nimi">Varasto:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="varasto" name="varasto" required placeholder="anna varastomäärä">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Muokkaa tuote</button>
            </div>
        </div>
    </form>
</div>

